<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/fractal_background">


    <ImageButton
        android:id="@+id/LookUpReportImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/look_up_report_button" />

    <ImageButton
        android:id="@+id/TrendsImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="15dp"
        android:layout_below = "@+id/LookUpReportImageButton"
        app:srcCompat="@drawable/trends_button" />

</RelativeLayout>

